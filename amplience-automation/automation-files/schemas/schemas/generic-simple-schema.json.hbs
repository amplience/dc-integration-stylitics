{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://demostore.amplience.com/content/stylitics/generic-simple",

	"title": "Stylitics Generic",
	"description": "A sample content type that lets the user pick the view type required",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"help": {
			"type": "null",
			"ui:extension": {
				"name": "help",
				"params": {
					"title": "Stylitics Generic",
					"message": "### Example SKUs\n#### demo-womens account\n|SKU label|SKU ID|\n|----|----|\n|PUMA x VOGUE Women's Sweatpants|536693_22|\n|Willa blazer in city crepe|BP416_BK0001|\n|Willa blazer in city crepe|BP416_NA6095|\n|Millie slingback heels with metallic mesh|BQ292_EE3794|\n|Demi-fine 14k gold-plated layered necklace|BN463_EC7253|\n|Edie Italian leather bag|BP508_NA6445|\n|Maisie ankle-strap heels in Italian suede|BP331_EE3843|"
				}
			}
		},
		"header": {
            "title": "Header",
            "allOf": [
                {
                    "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string"
                }
            ]
        },
		"view": {
			"title": "View Type",
			"description": "The rendering style of the Stylitics component",
			"type": "string",
			"enum": [
				"classic",
				"hotspots",
				"moodboard",
				"gallery",
				"mainAndDetail"
			],
			"default": "classic"
		},
		"account": {
            "title": "Account",
            "allOf": [
                {
                    "$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/account"
                }
            ]
        },
		"sku": {
			"title": "SKU",
			"description": "The sku of the product to render",
			"type": "string",
            "ui:extension": {
                "name": "ecomm-toolkit",
                "params": {
                    "label": "Search By Category",
                    "view": "product",
                    "data": "product",
                    "type": "string"
                }
            }
		},
		"api": {
            "title": "API Properties",
            "allOf": [
                {
                    "$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/api"
                }
            ]
        },
		"display": {
            "title": "Display Properties",
            "allOf": [
                {
                    "$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/display"
                }
            ]
        },
		"price": {
            "title": "Price Properties",
            "allOf": [
                {
                    "$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/price"
                }
            ]
        },
		"hotspots": {
			"title": "Hotspots Widget",
			"type": "object",
			"properties": {
				"display": {
					"title": "Display Properties",
					"type": "object",
					"properties": {
						"hotspotsAppearOnLoad": {
							"title": "Show Over Modals on Load",
							"allOf": [
								{
									"$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/hotspotsAppearOnLoad"
								}
							]
						},

						"hotspotsOverlayOrder": {
							"title": "Hotspots Overlay Order - Input",
							"allOf": [
								{
									"$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/hotspotsOverlayOrder"
								}
							]
						},

						"individualHotspots": {
							"title": "Individual Hotspots",
							"allOf": [
								{
									"$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/individualHotspots"
								}
							]
						}
					}
				}
			}
		},
		"gallery": {
			"title": "Gallery Widget",
			"type": "object",
			"properties": {
				"api": {
					"title": "API Properties",
					"type": "object",
					"properties": {
						"tags": {
							"title": "Tags",
							"allOf": [
								{
									"$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/tags"
								}
							]
						}
					}
				}
			}
		},
		"mainAndDetail": {
			"title": "Main and Detail Widget",
			"type": "object",
			"properties": {
				"display": {
					"title": "Display Properties",
					"type": "object",
					"properties": {
						"swipeableCarouselArrows": {
							"title": "Carousel Arrows (Mobile)",
							"allOf": [
								{
									"$ref": "https://demostore.amplience.com/lib/stylitics#/definitions/swipeableCarouselArrows"
								}
							]
						}
					}
				}
			}
		}
	},
	"propertyOrder": []
}