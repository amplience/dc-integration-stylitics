{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "declaration": true,
      "baseUrl": "./src",
      "rootDir": "./src",
      "outDir": "build/main",
      "allowJs": false,
      "esModuleInterop": true,
      "target": "es6",
      "module": "commonjs",
      "resolveJsonModule": true,
      "lib": ["es2019", "esnext.asynciterable", "ES6", "DOM"],
      "preserveSymlinks": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }